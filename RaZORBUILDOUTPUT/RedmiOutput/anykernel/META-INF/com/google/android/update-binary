#!/sbin/sh
# AnyKernel2 Backend
# osm0sis @ xda-developers

OUTFD=/proc/self/fd/$2;
ZIP="$3";
DIR=`dirname "$ZIP"`;

ui_print() {
  until [ ! "$1" ]; do
    echo -e "ui_print $1\nui_print" > $OUTFD;
    shift;
  done;
}
show_progress() { echo "progress $1 $2" > $OUTFD; }
set_perm_recursive() {
  dirs=$(echo $* | awk '{ print substr($0, index($0,$5)) }');
  for i in $dirs; do
    chown -R $1.$2 $i; chown -R $1:$2 $i;
    find "$i" -type d -exec chmod $3 {} +;
    find "$i" -type f -exec chmod $4 {} +;
  done;
}
file_getprop() { grep "^$2" "$1" | cut -d= -f2; }
getprop() { test -e /sbin/getprop && /sbin/getprop $1 || file_getprop /default.prop $1; }
abort() { ui_print "$*"; exit 1; }

show_progress 1.34 4;
ui_print " ";
mkdir -p /tmp/anykernel;
cd /tmp/anykernel;
unzip -o $ZIP;

ui_print " ";
ui_print "****************************************************";
ui_print "****************************************************";
ui_print "         _____   _____  _______ _____  _____   ";
ui_print "        |  _  \ |  _  ||___   /|  _  ||  _  \  ";
ui_print "        | |_|  || /_\ |    / / | | | || |_|  | ";
ui_print "        |    _/ |  _  |   / /  | | | ||    _/  ";
ui_print "        | |\ \  | / \ |  / /   | | | || |\ \   ";
ui_print "        | | \ \ | | | | / /__  | |_| || | \ \  ";
ui_print "        |_|  \_\|_| |_|/_____| |_____||_|  \_\ ";
ui_print "  _____   _____  ____   _____  _____   ___      _ ";
ui_print " |  _  \ | ____||  _ \ |  _  ||  _  \ |   \    | |";
ui_print " | |_|  || |    | |_| \| | | || |_|  || |\ \   | |";
ui_print " |    _/ | |___ |     || | | ||    _/ | | \ \  | |";
ui_print " | |\ \  |  ___||  _  || | | || |\ \  | |  \ \ | |";
ui_print " | | \ \ | |___ | |_| /| |_| || | \ \ | |   \ \| |";
ui_print " |_|  \_\|_____||____/ |_____||_|  \_\|_|    \___|";
ui_print "  ";
ui_print "****************************************************";
ui_print "                   by KIRAN ANTO                 ";
ui_print "****************************************************";
ui_print "  ";

/sbin/busybox mount /system;

ui_print "***********************";
ui_print "Installing kernel....";
ui_print "Please Wait for your";
ui_print "RazorSharp Phone.......";
ui_print "***********************";
rm -rf /system/vendor/lib/hw/power.msm8916.so;
rm -rf /system/vendor/lib64/hw/power.msm8916.so;
/sbin/sh /tmp/anykernel/anykernel.sh;
if [ "$(cat /tmp/anykernel/exitcode)" == 1 ]; then 
  umount /system;
  abort;
fi;
ui_print "  ";
ui_print "   SUCCESS  ";
ui_print "  ";

if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.cleanup)" == 1 ]; then
  rm -rf /tmp/anykernel;
fi;

umount /system;
ui_print "*******************************";
ui_print "THANKS FOR FLASHING";
ui_print "RazorReborn On Your Redmi 2 / Prime ..";
ui_print "Leave a Feedback";
ui_print "Donate If Possible";
ui_print " ******************************";
